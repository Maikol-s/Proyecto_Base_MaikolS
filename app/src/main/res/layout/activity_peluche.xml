<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"

    tools:context=".Peluche_Act">

    <Button
        android:id="@+id/button13"
        android:layout_width="214dp"
        android:layout_height="69dp"
        android:layout_margin="5dp"
        android:backgroundTint="#1F6C22"
        android:onClick="Volver"
        android:text="Volver"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView6"
        app:layout_constraintVertical_bias="0.26999998" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView6"
        android:layout_width="344dp"
        android:layout_height="495dp"
        android:layout_marginTop="45dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvAd"
                android:layout_width="210dp"
                android:layout_height="27dp"
                android:text="Adicional Por Entrega: $"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.76"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPre" />

            <TextView
                android:id="@+id/tvCat"
                android:layout_width="273dp"
                android:layout_height="43dp"
                android:text="Categoria:"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.061"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvCod" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="157dp"
                android:layout_height="217dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/korosensei" />

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="216dp"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:text="Nombre Producto"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.58"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView5" />

            <TextView
                android:id="@+id/tvCod"
                android:layout_width="276dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:text="Codigo Pedido:"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.06"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvNombre" />

            <TextView
                android:id="@+id/tvPre"
                android:layout_width="132dp"
                android:layout_height="27dp"
                android:layout_marginTop="35dp"
                android:text="Precio: $"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.924"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvCat" />

            <TextView
                android:id="@+id/tvTo"
                android:layout_width="119dp"
                android:layout_height="29dp"
                android:text="Total: $"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.92"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAd"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>